<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/application_toolbar"
        android:id="@+id/login_toolbar"></include>
    <TextView
        android:id="@+id/loginpage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="Useful Library App"
        android:textAllCaps="true"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/loginpage_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/loginpage_username"
        android:layout_alignStart="@+id/loginpage_username"
        android:layout_marginTop="62dp" />

    <AutoCompleteTextView
        android:id="@+id/loginpage_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginpage_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:hint="Username"
        android:ems="10"/>

    <ImageButton
        android:id="@+id/loginpage_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/loginpage_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/loginpage_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Username = Username and Password = Password" />

</RelativeLayout>