<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/application_toolbar"
        android:id="@+id/githubapi_toolbar"></include>

    <EditText
        android:id="@+id/githubapi_input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/githubapi_toolbar"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Git Username"
        android:layout_toStartOf="@+id/githubapi_input_button" />

    <Button
        android:id="@+id/githubapi_input_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/githubapi_input_field"
        android:layout_alignParentEnd="true"
        android:text="Search" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/githubapi_input_field"
        android:id="@+id/githubapi_recyclerview"></android.support.v7.widget.RecyclerView>


</RelativeLayout>